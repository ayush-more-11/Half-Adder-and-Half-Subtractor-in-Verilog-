`timescale 1ns / 1ps


// Gate Level Modelling
module half_subtractor( input A, B , output Diff, Borrow );
    xor(Diff, A, B);
    and(Borrow, ~A, B);
endmodule

// Data Flow Modelling
module half_subtractor( input A, B , output Diff, Borrow );
  assign Diff = (A ^ B);
  assign Borrow = (~A & B);
endmodule

//Behavioral Modelling
module half_subtractor( input A, B , output reg Diff, Borrow );
  always@(*)begin
   Diff = (A ^ B);
   Borrow = (~A & B);
endmodule


