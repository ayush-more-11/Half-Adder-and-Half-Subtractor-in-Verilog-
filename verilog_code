//////////////////////////////////////////////////////////////////////////////////

// Gate Level Modelling 
module half_adder(output Sum, Carry, input A, B); 
  xor (Sum, A, B);  // Sum = A XOR B 
  and (Carry, A, B); // Carry = A AND B 
endmodule 

//////////////////////////////////////////////////////////////////////////////////

// Data Flow Modelling 
module half_adder(output Sum, Carry, input A, B); 

  assign Sum = A ^ B;  
  assign Carry = A & B; 
endmodule 

//////////////////////////////////////////////////////////////////////////////////

// Behavioral Modelling 
module half_adder(output reg Sum, Carry, input A, B); 

  always @(*) begin 
    Sum = A ^ B; 
    Carry = A & B; 
  end 
endmodule

//////////////////////////////////////////////////////////////////////////////////
